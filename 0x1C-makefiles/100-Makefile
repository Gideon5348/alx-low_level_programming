NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)

RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ)

clean:
	-$(RM) $(NAME) $(wildcard *~)

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.SILENT: all clean oclean fclean re

.PHONY: all clean oclean fclean re